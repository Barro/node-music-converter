    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/jqueryui/1.9.0/jquery-ui.min.js')
    div(id="player")
      div(id="player-controls")
        button(id="play-control") Play
        button(id="next") Next!
        span(id="preload-status")
        button(id="toggle-queue") Queue
        span(id="queue-length") 0
      audio(class="player")
      audio(class="preload-player", preload="auto")
      input(class="position-slider", type="range", min="0", max="100", step="0.1")
      span(class="current-position") 00:00
      /
      span(class="duration") 00:00
      input(class="volume-slider", type="range", min="0", max="100", step="0.1")
      span(class="volume-intensity")
      div(id="status-current", class="song-info song-info-current")
        div(class="song-info")
          label(for="artist") Artist:&nbsp;
            span(id="artist")
        div(class="song-info")
          label(for="album") Album:&nbsp;
            span(id="album")
        div(class="song-info")
          label(for="title") Title:&nbsp;
            span(id="title")

    table(id="queue", class="hidden playlist")

    div Search: 
      input(type="text", id="search")
    table(id="playlist", class="display playlist")

    div(class="description") Source code: 
