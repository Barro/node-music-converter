    script(src='external/js/jquery.dataTables.min.js')
    script(src='external/js/jquery.hotkeys.min.js')
    script(src='external/js/Scroller.min.js')
    script(src='external/js/underscore.min.js')
    script(src='external/js/backbone.min.js')
    script(src='external/js/underscore.string.min.js')
    script(src='frontend/script.js')
